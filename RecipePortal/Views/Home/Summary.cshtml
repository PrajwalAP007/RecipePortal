@model RecipeModels.Models.RecipeUpload
<style>
    .rating {
        margin-top: 10px;
    }

    .average-rating {
        font-size: 18px;
        font-weight: bold;
    }

    .stars {
        color: #ffc107; /* Yellow color for stars */
        font-size: 24px;
        margin-top: 5px;
    }

        /* Adjust spacing between stars */
        .stars i {
            margin-right: 3px;
        }

</style>
<form method="post">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                
                    <p class="text-white-50 fw-bold mb-0"  style="font-size:50px"><i>@Model.Title</i></p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
              <input asp-for="@Model.RecipeId" hidden/>
              <input asp-for="@Model.ApplicationUserid" hidden/>
              <input asp-for="@Model.ApplicationUser.Name" hidden/>
              <input asp-for="@Model.ApplicationUser.Email" hidden />
                <input asp-for="@Model.ApplicationUser.PhoneNumber" hidden/>
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                        <div class="rating">
                            <span class="average-rating">@ViewBag.AverageRating / 5</span>
                            <div class="stars">
                                @for (int i = 0; i < Math.Floor(ViewBag.AverageRating); i++)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                @if (ViewBag.AverageRating - Math.Floor(ViewBag.AverageRating) > 0)
                                {
                                    <i class="bi bi-star-half"></i>
                                }
                                @for (int i = (int)Math.Ceiling(ViewBag.AverageRating); i < 5; i++)
                                {
                                    <i class="bi bi-star"></i>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                   
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-100 ">Cook Name : @Model.ApplicationUser.Name</h6>
                        </div>
                       
                        <div class="row text-center ps-2">
                          
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Recipe Type</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Recipe Language</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Recipe Meal type</div>
                            </div>
                          
                        </div>
                        <div class="row text-center ps-2">
                           
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.RecipeType</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.RecipeLanguage</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.RecipeMealType</div>
                            </div>  
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm" style="color:black">@Html.Raw(Model.RecipeDescription)</p>
                        </div>
                   
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit"
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    <i class="bi bi-currency-dollar"></i>  Purchase
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

